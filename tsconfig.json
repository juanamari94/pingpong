{
  "compilerOptions": {
    "outDir": "./dist",
    "pretty": true,
    "target": "es2019",
    "lib": [
      "es2017",
      "dom",
    ],
    "module": "commonjs",
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true // Needed to compile tap and ansi-escapes
